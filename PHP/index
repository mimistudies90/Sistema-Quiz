<body>

    <div class="container">
        <h1>Escolha a Dificuldade do Quiz</h1>
        <div class="options-container">
            <div class="options">
                <div class="option" onclick="startQuiz('facil')">
                    E
                    <div class="description">Fácil</div>
                </div>
                <div class="option" onclick="startQuiz('medio')">
                    A
                    <div class="description">Médio</div>
                </div>
                <div class="option" onclick="startQuiz('dificil')">
                    S
                    <div class="description">Difícil</div>
                </div>
            </div>
        </div>
    </div>

    <div class="notification" id="notification1">
        <button class="close-btn" onclick="closeNotification('notification1')">×</button>
        <h2>Notificação</h2>
        <p>Bem-vindo jogador! Boa sorte na sua aventura</p>
    </div>

    <div class="notification" id="notification2">
        <button class="close-btn" onclick="closeNotification('notification2')">×</button>
        <h2>Notificação</h2>
        <p>Importante!</p>
        <p>O rank do jogador afeta a dificuldade do quiz</p>
    </div>

    <script>
        function closeNotification(notificationId) {
            const notification = document.getElementById(notificationId);
            notification.style.display = 'none';
        }

        function startQuiz(dificuldade) {
            // Redireciona para a página correspondente com base na dificuldade
            window.location.href = `quiz/${dificuldade}.php`; // Ajuste o caminho para a pasta "quiz"
        }

        // Exibir a primeira notificação após 1 segundo
        setTimeout(() => {
            document.getElementById('notification1').style.display = 'block';
            // Exibir a segunda notificação após 4 segundos da primeira
            setTimeout(() => {
                document.getElementById('notification2').style.display = 'block';
            }, 1005);
        }, 1000);
    </script>

